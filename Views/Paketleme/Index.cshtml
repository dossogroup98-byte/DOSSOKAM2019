@model IEnumerable<Paketleme>
@{
    ViewData["Title"] = "Paketleme ƒ∞≈ülemleri";
}

<div class="container-fluid">
    <!-- DATABASE SWITCHER - YENƒ∞ EKLENDƒ∞ -->
    <div class="card mb-3">
        <div class="card-body py-2">
            <div class="row align-items-center">
                <div class="col-md-6 mb-2 mb-md-0">
                    <small class="text-muted">üóÉÔ∏è Aktif Veritabanƒ±:</small>
                    <strong class="text-primary">@(ViewBag.SelectedDatabase == "postgresql" ? "PostgreSQL" : "SQL Server")</strong>
                </div>
                <div class="col-md-6 text-md-end">
                    <form method="post" action="@Url.Action("SwitchDatabase", "Paketleme")" class="d-inline">
                        <div class="btn-group btn-group-sm" role="group">
                            <button type="submit" name="database" value="sqlserver"
                                    class="btn @(ViewBag.SelectedDatabase == "sqlserver" ? "btn-primary" : "btn-outline-primary")">
                                üìä SQL Server
                            </button>
                            <button type="submit" name="database" value="postgresql"
                                    class="btn @(ViewBag.SelectedDatabase == "postgresql" ? "btn-success" : "btn-outline-success")">
                                üêò PostgreSQL
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">üì¶ Paketleme ƒ∞≈ülemleri</h4>
            <a href="@Url.Action("Create", new { database = ViewBag.SelectedDatabase })" class="btn btn-light">‚ûï Yeni Kayƒ±t</a>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Sipari≈ü No</th>
                                <th>√úr√ºn Adƒ±</th>
                                <th>Ba≈ülama Tarihi</th>
                                <th>Ge√ßen S√ºre</th>
                                <th>A√ßƒ±klama</th>
                                <th>ƒ∞≈ülemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong>@item.SiparisNo</strong></td>
                                    <td>@item.UrunAdi</td>
                                    <td>@item.BaslamaTarihi?.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>
                                        @if (item.GecenSure.HasValue)
                                        {
                                            <span class="badge bg-warning">@item.GecenSure.Value.ToString("F2") saat</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">0 saat</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Aciklama))
                                        {
                                            <small class="text-muted">@item.Aciklama</small>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <form asp-action="Complete" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@item.PaketlemeID" />
                                            <input type="hidden" name="database" value="@ViewBag.SelectedDatabase" />
                                            <button type="submit" class="btn btn-success btn-sm">‚úÖ Tamamla</button>
                                        </form>
                                        <form asp-action="Delete" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@item.PaketlemeID" />
                                            <input type="hidden" name="database" value="@ViewBag.SelectedDatabase" />
                                            <button type="submit" class="btn btn-danger btn-sm"
                                                    onclick="return confirm('Bu kaydƒ± silmek istediƒüinizden emin misiniz?')">
                                                üóëÔ∏è Sil
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <h5>üìù Hen√ºz kayƒ±tlƒ± paketleme i≈üi bulunmamaktadƒ±r</h5>
                    <p>Yeni kayƒ±t eklemek i√ßin "Yeni Kayƒ±t" butonuna tƒ±klayƒ±n.</p>
                </div>
            }
        </div>
    </div>
</div>