            }

            .fs-1 {
                font-size: 2rem !important;
            }

            .btn-group-vertical-mobile {
                display: flex;
                flex-direction: column;
            }

                .btn-group-vertical-mobile .btn {
                    margin-bottom: 0.25rem;
                    text-align: center;
                }
        }

        @@media (max-width: 576px) {
            .col-sm-6 {
                flex: 0 0 auto;
                width: 100%;
            }

            .alert h4 {
                font-size: 1.1rem;
            }

            .card-header h5 {
