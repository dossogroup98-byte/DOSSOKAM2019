            }

            .table th, .table td {
                white-space: nowrap;
                padding: 0.5rem;
            }
        }

        .navbar {
            box-shadow: 0 2px 4px rgba(0,0,0,.1);
        }

        .btn, .form-control, .form-select {
            min-height: 44px;
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: rgba(0, 0, 0, 0.02);
        }

        .card {
            transition: transform 0.2s ease-in-out;
        }

            .card:hover {
                transform: translateY(-2px);
            }
    </style>
</head>
