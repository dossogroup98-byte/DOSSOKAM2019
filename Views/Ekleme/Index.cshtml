<!-- Views/Ekleme/Index.cshtml - TAM KOD -->
@model List<Ekleme>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Ekleme İşlemleri";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>🔧 Ekleme</h2>
        <div>
            <a href="@Url.Action("Create")" class="btn btn-success">➕ ADD</a>
            <a href="@Url.Action("Clear")" class="btn btn-warning" onclick="return confirm('Tüm tamamlanmış kayıtlar silinecek. Emin misiniz?')">🗑️ CLEAR</a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <div class="card">
        <div class="card-header bg-warning text-white">
            <h5 class="mb-0">🔄 Devam Eden Ekleme İşleri</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Sipariş No</th>
                                <th>Ürün Adı</th>
                                @* <th>Kalan Saat</th> *@
                                <th>Miktar</th>
                                <th>Başlama Tarihi</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.SiparisNo</td>
                                    <td>@item.UrunAdi</td>
                                    @* <td>@item.KalanSaat saat</td>
                                    <td>@item.SiparisMiktar</td> *@
                                    <td>@item.BaslamaTarihi?.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>
                                        <form method="post" action="@Url.Action("Complete")" class="d-inline">
                                            <input type="hidden" name="id" value="@item.EklemeID" />
                                            <button type="submit" class="btn btn-success btn-sm">✅ Completed</button>
                                        </form>
                                        <form method="post" action="@Url.Action("Delete")" class="d-inline">
                                            <input type="hidden" name="id" value="@item.EklemeID" />
                                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinizden emin misiniz?')">🗑️ Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">📝 Henüz kayıtlı ekleme işi bulunmamaktadır.</div>
            }
        </div>
    </div>
</div>
