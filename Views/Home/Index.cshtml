    <!-- Arama Sonu√ß Bilgisi -->
    @if (!string.IsNullOrEmpty(Context.Request.Query["search"]))
    {
        <div class="row mb-3">
            <div class="col-12">
                <div class="alert alert-info">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-search me-2"></i>
                        <div>
