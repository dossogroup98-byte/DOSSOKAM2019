                    </div>
                </div>
            </div>
        </div>
    }

    <!-- T√ºm √úr√ºnlerin Mevcut Durumu - MOBILE OPTIMIZED -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center">
                        <h5 class="mb-2 mb-md-0">üìä T√ºm √úr√ºnler - Mevcut B√∂l√ºmleri</h5>
                        <span class="badge bg-light text-dark fs-6">@Model.TumUrunDurumlari.Count kayƒ±t</span>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (Model.TumUrunDurumlari.Any())
                    {
                        <div class="table-responsive" style="max-height: 60vh; overflow-y: auto;">
                            <table class="table table-striped table-hover mb-0">
                                <thead class="table-dark sticky-top">
                                    <tr>
                                        <th>Sipari≈ü No</th>
                                        <th>√úr√ºn Adƒ±</th>
                                        <th>B√∂l√ºm</th>
                                        <th>Durum</th>
                                        <th>Ba≈ülama</th>
                                        <th>S√ºre</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var urun in Model.TumUrunDurumlari)
                                    {
                                        <tr>
                                            <td><strong class="text-nowrap">@urun.SiparisNo</strong></td>
                                            <td class="text-nowrap">@urun.UrunAdi</td>
                                            <td>
                                                <span class="badge bg-@urun.RenkKodu">@urun.MevcutBolum</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-success">@urun.Durum</span>
                                            </td>
                                            <td class="text-nowrap">
                                                @if (urun.BaslamaTarihi.HasValue)
                                                {
                                                    @urun.BaslamaTarihi.Value.ToString("dd/MM HH:mm")
                                                }
                                                else
                                                {
                                                    @:"-"
                                                }
                                            </td>
                                            <td class="text-nowrap">
                                                @if (urun.BaslamaTarihi.HasValue)
                                                {
                                                    var gecenSure = DateTime.Now - urun.BaslamaTarihi.Value;
                                                    var toplamSaat = (int)gecenSure.TotalHours;
                                                    var toplamGun = (int)gecenSure.TotalDays;

                                                    if (toplamGun > 0)
                                                    {
                                                        <span class="badge bg-warning">@toplamGun g√ºn</span>
                                                    }
                                                    else if (toplamSaat > 0)
                                                    {
                                                        <span class="badge bg-info">@toplamSaat sa</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary">@((int)gecenSure.TotalMinutes) dk</span>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">-</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info m-3">
                            <div class="d-flex align-items-center">
                                <i class="bi bi-info-circle me-2"></i>
                                <span>üìù Sistemde aktif √ºretim bulunmamaktadƒ±r.</span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>