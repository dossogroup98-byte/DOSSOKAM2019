@model List<MakineSaat>
@{
    ViewData["Title"] = "Makine Saat İşlemleri";
}

<div class="container-fluid">
    <!-- DATABASE SWITCHER - YENİ EKLENDİ -->
    <div class="card mb-3">
        <div class="card-body py-2">
            <div class="row align-items-center">
                <div class="col-md-6 mb-2 mb-md-0">
                    <small class="text-muted">🗃️ Aktif Veritabanı:</small>
                    <strong class="text-primary">@(ViewBag.SelectedDatabase == "postgresql" ? "PostgreSQL" : "SQL Server")</strong>
                </div>
                <div class="col-md-6 text-md-end">
                    <form method="post" action="@Url.Action("SwitchDatabase", "MakineSaat")" class="d-inline">
                        <div class="btn-group btn-group-sm" role="group">
                            <button type="submit" name="database" value="sqlserver"
                                    class="btn @(ViewBag.SelectedDatabase == "sqlserver" ? "btn-primary" : "btn-outline-primary")">
                                📊 SQL Server
                            </button>
                            <button type="submit" name="database" value="postgresql"
                                    class="btn @(ViewBag.SelectedDatabase == "postgresql" ? "btn-success" : "btn-outline-success")">
                                🐘 PostgreSQL
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>🏭 Makine Saat</h2>
        <a href="@Url.Action("Create", new { database = ViewBag.SelectedDatabase })" class="btn btn-success">➕ Yeni Kayıt</a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header bg-warning text-white">
            <h5 class="mb-0">🔄 Devam Eden İşler</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Sipariş No</th>
                                <th>Ürün Adı</th>
                                <th>Kalan Saat</th>
                                <th>Miktar</th>
                                <th>Başlama Tarihi</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><strong>@item.SiparisNo</strong></td>
                                    <td>@item.UrunAdi</td>
                                    <td>
                                        <span class="badge @(item.KalanSaat > 10 ? "bg-success" : "bg-danger")">
                                            @item.KalanSaat saat
                                        </span>
                                    </td>
                                    <td>@item.SiparisMiktar</td>
                                    <td>
                                        @if (item.BaslamaTarihi.HasValue && item.BaslamaTarihi.Value != DateTime.MinValue)
                                        {
                                            @item.BaslamaTarihi.Value.ToString("dd/MM/yyyy HH:mm")
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <form asp-action="Complete" method="post" class="d-inline">
                                            <input type="hidden" name="id" value="@item.MakineSaatID" />
                                            <input type="hidden" name="database" value="@ViewBag.SelectedDatabase" />
                                            <button type="submit" class="btn btn-success btn-sm">➡️ Ekleme'ye Taşı</button>
                                        </form>
                                        <form method="post" action="@Url.Action("Delete")" class="d-inline">
                                            <input type="hidden" name="id" value="@item.MakineSaatID" />
                                            <input type="hidden" name="database" value="@ViewBag.SelectedDatabase" />
                                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğinizden emin misiniz?')">🗑️ Sil</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info text-center">
                    <h5>📝 Henüz kayıtlı makine saati işi bulunmamaktadır</h5>
                    <p>Yeni kayıt eklemek için "Yeni Kayıt" butonuna tıklayın.</p>
                </div>
            }
        </div>
    </div>
</div>