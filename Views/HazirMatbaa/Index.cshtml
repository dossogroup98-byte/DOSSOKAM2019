@model IEnumerable<HazirMatbaa>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Hazır Matbaa";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4>🎨 Hazır Matbaa</h4>
            <a href="@Url.Action("Create")" class="btn btn-light">➕ Yeni Kayıt</a>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Sipariş No</th>
                        <th>Ürün Adı</th>
                        <th>Çıkan Adet</th>
                        <th>Kayıt Tarihi</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.SiparisNo</td>
                            <td>@item.UrunAdi</td>
                            <td>@(item.CikanAdet?.ToString() ?? "-")</td>
                            <td>@item.KayitTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                <form asp-action="Delete" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@item.HazirMatbaaID" />
                                    <button type="submit" class="btn btn-danger btn-sm" 
                                            onclick="return confirm('Bu kaydı silmek istediğinizden emin misiniz?')">🗑️ Sil</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
