@model Kullanici
@{
    ViewData["Title"] = "Kullanıcı Ekle";
}

<div class="container-fluid">
    <!-- DATABASE SWITCHER - YENİ EKLENDİ -->
    <div class="card mb-3">
        <div class="card-body py-2">
            <div class="row align-items-center">
                <div class="col-md-6 mb-2 mb-md-0">
                    <small class="text-muted">🗃️ Aktif Veritabanı:</small>
                    <strong class="text-primary">@(ViewBag.SelectedDatabase == "postgresql" ? "PostgreSQL" : "SQL Server")</strong>
                </div>
                <div class="col-md-6 text-md-end">
                    <form method="post" action="@Url.Action("SwitchDatabase", "Account")" class="d-inline">
                        <div class="btn-group btn-group-sm" role="group">
                            <button type="submit" name="database" value="sqlserver"
                                    class="btn @(ViewBag.SelectedDatabase == "sqlserver" ? "btn-primary" : "btn-outline-primary")">
                                📊 SQL Server
                            </button>
                            <button type="submit" name="database" value="postgresql"
                                    class="btn @(ViewBag.SelectedDatabase == "postgresql" ? "btn-success" : "btn-outline-success")">
                                🐘 PostgreSQL
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">👤 Kullanıcı Ekle</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <input type="hidden" name="database" value="@ViewBag.SelectedDatabase" />

                        <div class="mb-3">
                            <label class="form-label">👤 Ad Soyad</label>
                            <input type="text" class="form-control" asp-for="AdSoyad" required placeholder="Ad Soyad giriniz">
                            <span asp-validation-for="AdSoyad" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">👤 Kullanıcı Adı</label>
                            <input type="text" class="form-control" asp-for="KullaniciAdi" required placeholder="Kullanıcı adı giriniz">
                            <span asp-validation-for="KullaniciAdi" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">🔑 Şifre</label>
                            <input type="password" class="form-control" asp-for="Sifre" required placeholder="Şifre giriniz">
                            <span asp-validation-for="Sifre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">🎭 Rol</label>
                            <select class="form-select" asp-for="Role" required>
                                <option value="">-- Rol Seçin --</option>
                                <option value="Kullanıcı">👤 Kullanıcı</option>
                                <option value="Yönetici">👑 Yönetici</option>
                                <option value="Gözlemci">👀 Gözlemci</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>

                        @if (ViewData.ModelState.ErrorCount > 0)
                        {
                            <div class="alert alert-danger">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <div>❌ @error.ErrorMessage</div>
                                }
                            </div>
                        }

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success">✅ Kullanıcı Ekle</button>
                            <a href="@Url.Action("List", "Account", new { database = ViewBag.SelectedDatabase })" class="btn btn-secondary">↩️ İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}