                                                    <input type="hidden" name="id" value="@kullanici.KullaniciID" />
                                                    <input type="hidden" name="database" value="@ViewBag.SelectedDatabase" />
                                                    <button type="submit" class="btn btn-danger btn-sm"
                                                            onclick="return confirm('@kullanici.AdSoyad kullanƒ±cƒ±sƒ±nƒ± silmek istediƒüinize emin misiniz?')">
                                                        üóëÔ∏è Sil
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
