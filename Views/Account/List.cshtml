@model List<Kullanici>
@{
    ViewData["Title"] = "Kullanıcı Listesi";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h2>Kullanıcı Listesi</h2>
                <a href="@Url.Action("Create", "Account")" class="btn btn-success">Yeni Kullanıcı</a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body p-0">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Ad Soyad</th>
                                        <th>Kullanıcı Adı</th>
                                        <th>Rol</th>
                                        <th>Durum</th>
                                        <th>Kayıt Tarihi</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var kullanici in Model)
                                    {
                                        <tr>
                                            <td>@kullanici.AdSoyad</td>
                                            <td>@kullanici.KullaniciAdi</td>
                                            <td>@kullanici.Role</td>
                                            <td>
                                                @if (kullanici.Aktif)
                                                {
                                                    <span class="badge bg-success">Aktif</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger">Pasif</span>
                                                }
                                            </td>
                                            <td>@kullanici.KayitTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                                            <td>
                                                <form method="post" asp-action="Delete" class="d-inline">
                                                    <input type="hidden" name="id" value="@kullanici.KullaniciID" />
                                                    <button type="submit" class="btn btn-danger btn-sm"
                                                            onclick="return confirm('@kullanici.AdSoyad kullanıcısını silmek istediğinize emin misiniz?')">
                                                        Sil
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info m-3">Henüz kullanıcı bulunmamaktadır.</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>