@model Kullanici
@{
    ViewData["Title"] = "Kullanıcı Düzenle";
}

<div class="container-fluid">
    <!-- DATABASE SWITCHER - YENİ EKLENDİ -->
    <div class="card mb-3">
        <div class="card-body py-2">
            <div class="row align-items-center">
                <div class="col-md-6 mb-2 mb-md-0">
                    <small class="text-muted">🗃️ Aktif Veritabanı:</small>
                    <strong class="text-primary">@(ViewBag.SelectedDatabase == "postgresql" ? "PostgreSQL" : "SQL Server")</strong>
                </div>
                <div class="col-md-6 text-md-end">
                    <form method="post" action="@Url.Action("SwitchDatabase", "Kullanici")" class="d-inline">
                        <div class="btn-group btn-group-sm" role="group">
                            <button type="submit" name="database" value="sqlserver"
                                    class="btn @(ViewBag.SelectedDatabase == "sqlserver" ? "btn-primary" : "btn-outline-primary")">
                                📊 SQL Server
                            </button>
                            <button type="submit" name="database" value="postgresql"
                                    class="btn @(ViewBag.SelectedDatabase == "postgresql" ? "btn-success" : "btn-outline-success")">
                                🐘 PostgreSQL
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header bg-warning text-white">
                    <h4 class="mb-0">✏️ Kullanıcı Düzenle</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="KullaniciID" />
                        <input type="hidden" name="database" value="@ViewBag.SelectedDatabase" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="AdSoyad" class="form-label">👤 Ad Soyad *</label>
                                    <input asp-for="AdSoyad" class="form-control" required
                                           placeholder="Ad soyad giriniz" />
                                    <span asp-validation-for="AdSoyad" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="KullaniciAdi" class="form-label">👤 Kullanıcı Adı *</label>
                                    <input asp-for="KullaniciAdi" class="form-control" required
                                           placeholder="Kullanıcı adı giriniz" />
                                    <span asp-validation-for="KullaniciAdi" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Sifre" class="form-label">🔑 Şifre *</label>
                                    <input asp-for="Sifre" type="password" class="form-control" required
                                           placeholder="Şifre giriniz" />
                                    <span asp-validation-for="Sifre" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Email" class="form-label">📧 E-posta</label>
                                    <input asp-for="Email" type="email" class="form-control"
                                           placeholder="E-posta adresi giriniz" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Role" class="form-label">🎭 Rol *</label>
                                    <select asp-for="Role" class="form-select" required>
                                        <option value="">-- Rol Seçin --</option>
                                        <option value="Admin">👑 Admin</option>
                                        <option value="Yönetici">👑 Yönetici</option>
                                        <option value="Personel">👤 Personel</option>
                                        <option value="Kullanıcı">👤 Kullanıcı</option>
                                        <option value="Vizor">👀 Vizor</option>
                                        <option value="Gözlemci">👀 Gözlemci</option>
                                    </select>
                                    <span asp-validation-for="Role" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label class="form-label">📅 Kayıt Tarihi</label>
                                    <input type="text" class="form-control" value="@Model.KayitTarihi.ToString("dd.MM.yyyy HH:mm")" disabled />
                                    <small class="text-muted">Otomatik olarak ayarlanır</small>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="Aktif" class="form-check-input" type="checkbox" />
                                <label asp-for="Aktif" class="form-check-label">✅ Kullanıcı Aktif</label>
                            </div>
                            <small class="text-muted">Pasif yapılan kullanıcılar sisteme giriş yapamaz</small>
                        </div>

                        @if (ViewData.ModelState.ErrorCount > 0)
                        {
                            <div class="alert alert-danger">
                                <h6>❌ Formda hatalar var:</h6>
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <div>• @error.ErrorMessage</div>
                                }
                            </div>
                        }

                        <div class="form-group">
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-warning">
                                    <i class="bi bi-check-lg"></i> 💾 Güncelle
                                </button>
                                <a href="@Url.Action("Index", new { database = ViewBag.SelectedDatabase })" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left"></i> ← Listeye Dön
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}