@model Dokumaci

@{
    ViewData["Title"] = "Dokumacı Düzenle";
}

<div class="container">
    <h1>Dokumacı Düzenle</h1>
    
    <form asp-action="Edit">
        <input type="hidden" asp-for="DokumaciID" />
        <div class="form-group">
            <label asp-for="DokumaciAdi" class="control-label">Dokumacı Adı</label>
            <input asp-for="DokumaciAdi" class="form-control" />
            <span asp-validation-for="DokumaciAdi" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Telefon" class="control-label">Telefon</label>
            <input asp-for="Telefon" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Adres" class="control-label">Adres</label>
            <textarea asp-for="Adres" class="form-control"></textarea>
        </div>
        <div class="form-group form-check">
            <input asp-for="Aktif" class="form-check-input" />
            <label asp-for="Aktif" class="form-check-label">Aktif</label>
        </div>
        <div class="form-group">
            <input type="submit" value="Kaydet" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-secondary">İptal</a>
        </div>
    </form>
</div>