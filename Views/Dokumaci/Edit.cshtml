@model Dokumaci
@{
    ViewData["Title"] = "Dokumacƒ± D√ºzenle";
}

<div class="container-fluid">
    <!-- DATABASE SWITCHER - YENƒ∞ EKLENDƒ∞ -->
    <div class="card mb-3">
        <div class="card-body py-2">
            <div class="row align-items-center">
                <div class="col-md-6 mb-2 mb-md-0">
                    <small class="text-muted">üóÉÔ∏è Aktif Veritabanƒ±:</small>
                    <strong class="text-primary">@(ViewBag.SelectedDatabase == "postgresql" ? "PostgreSQL" : "SQL Server")</strong>
                </div>
                <div class="col-md-6 text-md-end">
                    <form method="post" action="@Url.Action("SwitchDatabase", "Dokumaci")" class="d-inline">
                        <div class="btn-group btn-group-sm" role="group">
                            <button type="submit" name="database" value="sqlserver"
                                    class="btn @(ViewBag.SelectedDatabase == "sqlserver" ? "btn-primary" : "btn-outline-primary")">
                                üìä SQL Server
                            </button>
                            <button type="submit" name="database" value="postgresql"
                                    class="btn @(ViewBag.SelectedDatabase == "postgresql" ? "btn-success" : "btn-outline-success")">
                                üêò PostgreSQL
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-warning text-white">
                    <h4 class="mb-0">‚úèÔ∏è Dokumacƒ± D√ºzenle</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <input type="hidden" asp-for="DokumaciID" />
                        <input type="hidden" name="database" value="@ViewBag.SelectedDatabase" />

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="DokumaciAdi" class="form-label">üë§ Dokumacƒ± Adƒ± *</label>
                                    <input asp-for="DokumaciAdi" class="form-control" required
                                           placeholder="Dokumacƒ± adƒ±nƒ± giriniz" />
                                    <span asp-validation-for="DokumaciAdi" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Telefon" class="form-label">üìû Telefon</label>
                                    <input asp-for="Telefon" class="form-control"
                                           placeholder="Telefon numarasƒ± giriniz" />
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Adres" class="form-label">üè† Adres</label>
                            <textarea asp-for="Adres" class="form-control" rows="3"
                                      placeholder="Adres bilgilerini giriniz"></textarea>
                        </div>

                        <div class="form-group mb-3">
                            <div class="form-check form-switch">
                                <input asp-for="Aktif" class="form-check-input" type="checkbox" />
                                <label asp-for="Aktif" class="form-check-label">‚úÖ Aktif</label>
                            </div>
                            <small class="text-muted">Pasif yapƒ±lan dokumacƒ±lar listede g√∂r√ºnmez</small>
                        </div>

                        @if (ViewData.ModelState.ErrorCount > 0)
                        {
                            <div class="alert alert-danger">
                                <h6>‚ùå Formda hatalar var:</h6>
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <div>‚Ä¢ @error.ErrorMessage</div>
                                }
                            </div>
                        }

                        <div class="form-group">
                            <div class="d-flex gap-2">
                                <button type="submit" class="btn btn-warning">
                                    <i class="bi bi-check-lg"></i> üíæ G√ºncelle
                                </button>
                                <a href="@Url.Action("Index", new { database = ViewBag.SelectedDatabase })" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left"></i> ‚Üê ƒ∞ptal
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}