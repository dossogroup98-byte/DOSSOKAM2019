@model List<Dokumaci>

@{
    ViewData["Title"] = "Dokumacılar";
}

<div class="container">
    <h1>Dokumacılar</h1>
    
    <p>
        <a asp-action="Create" class="btn btn-success">Yeni Dokumacı Ekle</a>
    </p>
    
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Dokumacı Adı</th>
                <th>Telefon</th>
                <th>Adres</th>
                <th>Aktif</th>
                <th>Kayıt Tarihi</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DokumaciID</td>
                    <td>@item.DokumaciAdi</td>
                    <td>@item.Telefon</td>
                    <td>@item.Adres</td>
                    <td>@(item.Aktif ? "Evet" : "Hayır")</td>
                    <td>@item.KayitTarihi.ToString("dd.MM.yyyy")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.DokumaciID" class="btn btn-warning btn-sm">Düzenle</a>
                        <a asp-action="Delete" asp-route-id="@item.DokumaciID" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>